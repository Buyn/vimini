## Control Statements
# if
snippet ifs
if (${1:true}) ${0:${VISUAL}};
endsnippet

snippet ifse
if (${1:true}) ${2:${VISUAL}};
else ${0};
endsnippet

snippet if
if (${1:true}) {
	${0:${VISUAL}}
	}
endsnippet
snippet ife
if (${1:true}) {
	${2:${VISUAL}}
} else {
	${0}
	}
endsnippet
# else
snippet el
	else {
		${0:${VISUAL}}
	}
endsnippet
# else if
snippet elif
	else if (${1:true}) {
		${0:${VISUAL}}
	}
endsnippet
# ifi
snippet ifi
	if (${1:true}) ${0};
endsnippet
# ternary
snippet t
	${1:/* condition */} ? ${2:a} : ${3:b}
endsnippet
